<% layout('/layouts/boilerplate') %>

    <div class="row mb-2">
        <% if(!campground.reviews.length&&!currentUser){ %>
            <div class="col-6 offset-3 ">
                <div class="card mb-3">
                    <div class="card-header">
                        <%= campground.location %>
                    </div>
                    <img style="max-height: 80vh;" src="<%= campground.image %> " alt="img">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>
                            $
                                <%= campground.price %> /night
                            </b>
                        </li>
                        <li class="list-group-item">
                            <b>
                                Submitted by:
                            </b>
                            <%= campground.author.username %>
                        </li>
                    </ul>
                    <% if(currentUser&& campground.author.equals(currentUser)){ %>
                        <div class="card-body d-flex justify-content-evenly">
                            <div>
                                <a class="card-link btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                            </div>
                            <form class="d-inline mx-3" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <% } %>
                            <div class="card-footer text-muted text-center">
                                <small> <a class="link-secondary" href="/campgrounds">back to all campgrounds</a></small>
                            </div>
                </div>
            </div>
            <% } else { %>
                <div class="col-6 ">
                    <div class="card mb-3">
                        <div class="card-header">
                            <%= campground.location %>
                        </div>
                        <img style="max-height: 80vh;" src="<%= campground.image %> " alt="img">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><b>
                        $
                            <%= campground.price %> /night
                        </b>
                            </li>
                            <li class="list-group-item">
                                <b>
                            Submitted by:
                        </b>
                                <%= campground.author.username %>
                            </li>
                        </ul>
                        <% if(currentUser&& campground.author.equals(currentUser)){ %>
                            <div class="card-body d-flex justify-content-evenly">
                                <div>
                                    <a class="card-link btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                </div>
                                <form class="d-inline mx-3" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                            <% } %>
                                <div class="card-footer text-muted text-center">
                                    <small> <a class="link-secondary" href="/campgrounds">back to all campgrounds</a></small>
                                </div>
                    </div>
                </div>
                <% if(currentUser){ %>
                    <div class="col-6 mb-3 d-flex flex-column justify-content-center">
                        <h3>Leave a Review</h3>
                        <form class="mb-5 validated-form" action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="rating">Rating</label>
                                <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="body">Review</label>
                                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                            </div>
                            <button class="btn btn-primary">Submit</button>
                        </form>
                        <div class="overflow-auto border rounded mb-3" style="max-height: 50vh;">
                            <% for(let review of campground.reviews){ %>
                                <div class="card my-2">
                                    <div class="card-body">
                                        <h6 class="card-title">Rating:
                                            <%= review.rating %>/5
                                        </h6>
                                        <p class="card-text"><b>Review:</b>
                                            <%= review.body %>
                                                <small class="card-subtitle mb-2 text-muted"> - <%= review.author.username %> </small>
                                        </p>
                                        <% if(currentUser.equals(review.author)){ %>
                                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <% } else{ %>
                        <div class="overflow-auto border rounded col-6 mb-3" style="max-height: 90vh;">
                            <% for(let review of campground.reviews){ %>
                                <div class="card my-2">
                                    <div class="card-body">
                                        <h6 class="card-title">Rating:
                                            <%= review.rating %>/5
                                        </h6>
                                        <p class="card-text"><b>Review:</b>
                                            <%= review.body %>
                                                <small class="card-subtitle mb-2 text-muted"> - <%= review.author.username %> </small>
                                        </p>
                                        <% if(currentUser&&currentUser.equals(review.author)){ %>
                                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <% } %>
                            <% } %>
    </div>