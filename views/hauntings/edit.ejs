<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Update</h1>
        <div class="col-6 offset-3 mb-5">
            <form action="/hauntings/<%= haunting._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" value="<%= haunting.title %> " name="haunting[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" value="<%= haunting.location %> " name="haunting[location]" required>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="image" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" id="price" value="<%= haunting.price %> " name="haunting[price]" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="haunting[description]" required><%= haunting.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Update Haunting</button>
                </div>
            </form>
            <a class="btn btn-secondary" href="/hauntings">Cancel</a>
        </div>
    </div>