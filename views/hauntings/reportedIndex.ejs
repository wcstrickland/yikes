<% layout('/layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 60vh"></div>
    <h1>All Hauntings</h1>
    <% for(let haunting of hauntings){ %>
        <%if(haunting.reports.numReports>=1) {%>
            <div class="card border-secondary mb-4">
                <div class="row">
                    <% if (haunting.images.length>0) {%>
                        <div class="col-md-4">
                            <img src="<%= haunting.images[0].url %>" alt="" class="img-fluid">
                        </div>
                        <% } %>
                            <div class="col-md-8">
                                <div class="card-body my-2">
                                    <h5 class="card-title">
                                        <%= haunting.title %>
                                    </h5>
                                    <% if(haunting.description.length>250) { %>
                                        <p class="card-text">
                                            <%= haunting.description.substring(0, 250) %> ...
                                        </p>
                                        <% } else {%>
                                            <p class="card-text">
                                                <%= haunting.description %>
                                            </p>
                                            <% } %>
                                                <p class="card-text">
                                                    <small class="text-muted"><%= haunting.location %> </small>
                                                </p>
                                                <a class="btn btn-warning" href="/hauntings/admin/<%=haunting._id%>">View: <%= haunting.title %> </a>
                                </div>
                            </div>
                </div>
            </div>
            <%} %>
                <% } %>

                    <script>
                        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                        const hauntings = {
                            features: <%-JSON.stringify(hauntings) %>
                        }
                    </script>
                    <script src="/javascripts/clusterMap.js"></script>